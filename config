# i3lock
bindsym			$mod+Shift+comma exec "systemctl hibernate && gnome-screensaver-command -l"

exec xautolock -detectsleep \
  -time 15 -locker 'systemctl suspend && gnome-screensaver-command -l' \
  -notify 60 \
  -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 60 seconds'"
